import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allEntries = await getCollection('article'); // コレクション名を指定

  return allEntries.map(entry => {
    // entry.id から '2025/article/main/01' のようなパスを取得
    const [year, ...slugParts] = entry.id.split('/');
    const slug = slugParts.join('/');

    return {
      params: {
        year: year,
        slug: slug,
      },
      props: { entry },
    };
  });
}

