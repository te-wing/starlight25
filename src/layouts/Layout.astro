---
import Header from '../components/layoutFunc/Header.astro';
import Footer from '../components/layoutFunc/Footer.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}

const {
  noindex = false,
  title = 'The Scientific Seiko | 大阪星光学院天文部',
  description = 'こちらは，大阪星光学院天文部のウェブサイト「The Scientific Seiko」です．'
} = Astro.props;

const 正規URL = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="ja">
  <head>
    <!-- 基本情報とAstro -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {noindex && <meta name="robots" content="noindex" />}
    <link rel="canonical" href={正規URL} />

    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot transition:animate=slide />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --background: rgb(25, 33, 60);
    --foreground: white;
    --a-default: rgb(255, 250, 230);
    --a-hover: rgba(255, 250, 230, 0.54);
  }

  a {
    color: var(--a-default);
    &:hover {
      color: var(--a-hover);
    }
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--background);
    font-family: ZenMaru;
    color: var(--foreground);
    padding: 0;
  }

  @font-face {
    font-family: BizUDMincho;
    src: url('/fonts/BizUD.ttf');
  }

  @font-face {
    font-family: EpItalic;
    src: url('/fonts/EpItalic.ttf');
  }

  @font-face {
    font-family: EpNormal;
    src: url('/fonts/EpN.ttf');
  }

  @font-face {
    font-family: Sawarabi;
    src: url('/fonts/Sawarabi.ttf');
  }

  @font-face {
    font-family: FiraCode;
    src: url('/fonts/FiraCode.ttf');
  }

  @font-face {
    font-family: ZenMaru;
    src: url('/fonts/ZenMaru.ttf');
  }

  h2, h3, h4, strong {
    font-family: Sawarabi;
  }
</style>

<style lang="scss">
  body {
    max-width: 1200px;
    padding: 0 10px;
    box-sizing: border-box;
  }
</style>