---
import Header from '../components/layoutFunc/Header.astro';
import Footer from '../components/layoutFunc/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import 'katex/dist/katex.min.css';

interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}

const {
  noindex = false,
  title = 'The Scientific Seiko 2025 | 大阪星光学院天文部',
  description = 'こちらは，大阪星光学院天文部の部誌「The Scientific Seiko」2025年 デジタル版です．'
} = Astro.props;

const 正規URL = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="ja">
  <head>
    <!-- 基本情報とAstro -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {noindex && <meta name="robots" content="noindex" />}
    <link rel="canonical" href={正規URL} />

    <!-- アイコン -->
    <link rel="apple-touch-icon" href="/hotlink-ok/stamp.png" />
    <link rel="icon" href='/hotlink-ok/stamp.png' />

    <ClientRouter />
  </head>
  <body>
    <Header />
    <section class="slot">
      <slot transition:animate=slide />
    </section>
    <Footer />
  </body>
</html>

<style is:global lang="scss">
  .bookListSlot {
    list-style: none;
    padding: 0;
    li {
      border: 1px solid var(--foreground);
      padding: 10px;
      border-radius: 24px 10px;
      p {
        text-decoration: none;
        div {
          display: flex;
          a, p, h2 {
            margin: 0 2px;
            padding: 0;
          }
          p {
            color: var(--foreground);
          }
          &:hover {
            h2 {
              text-decoration: underline;
            }
          }
        }
      }
    }
  }
</style>

<style is:global lang="scss">
  .反転 {
    filter: invert(100%);
  }

  .mdxSection {
    p {
      margin: 5px auto;
      line-height: 1.8em;
    }
    figure {
      margin: 0;
      padding: 0;
      width: 100%;
      text-align: center;
      img {
        margin: 0;
        max-width: 100%;
        height: auto;
      }
    }
  }

  .noUnderline {
    a {
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
  }

  :root {
    --background: rgb(25, 33, 60);
    --foreground: white;
    --a-default: rgb(255, 250, 230);
    --a-hover: rgba(255, 250, 230, 0.54);
  }

  a {
    color: var(--a-default);
    &:hover {
      color: var(--a-hover);
    }
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--background);
    font-family: ZenMaru;
    color: var(--foreground);
    padding: 0;
  }

  @font-face {
    font-family: BizUDMincho;
    src: url('/fonts/BizUD.ttf');
  }

  @font-face {
    font-family: EpItalic;
    src: url('/fonts/EpItalic.ttf');
  }

  @font-face {
    font-family: EpNormal;
    src: url('/fonts/EpN.ttf');
  }

  @font-face {
    font-family: Sawarabi;
    src: url('/fonts/Sawarabi.ttf');
  }

  @font-face {
    font-family: FiraCode;
    src: url('/fonts/FiraCode.ttf');
  }

  @font-face {
    font-family: ZenMaru;
    src: url('/fonts/ZenMaru.ttf');
  }

  h1, h2, h3, h4, strong {
    font-family: Sawarabi;
  }

  h1 {
    text-align: center;
  }
</style>

<style lang="scss">
  body {
    max-width: 1200px;
    padding: 0 10px;
    box-sizing: border-box;
  }
  .slot {
    min-height: 200px;
    margin: 70px 20px auto;
    box-sizing: border-box;
  }
</style>